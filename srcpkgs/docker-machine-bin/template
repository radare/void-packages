if [ "$XBPS_TARGET_MACHINE" = "x86_64" ]; then
	distfiles="https://github.com/docker/machine/releases/download/v${version}/docker-machine_linux-amd64"
	checksum="b05a7373a1894af49626fe902e4f31be0fad271f3502ca2a3aa07a70d343e865"
fi

do_extract() {
	:
}

do_install() {
	ls ${XBPS_SRCDISTDIR}/${pkgname}-${version}/
	vbin ${XBPS_SRCDISTDIR}/${pkgname}-${version}/docker-machine_linux-amd64 docker-machine
}
